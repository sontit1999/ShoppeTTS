<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/tools">

    <data>
           <variable
               name="cagetory"
               type="com.example.shopeetts.model.Cagetory" />
        <variable
            name="callback"
            type="com.example.shopeetts.callback.CagetoryCallback" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_margin="10dp"
        android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
            android:id="@+id/cardview"
            app:cardElevation="5dp"
            app:cardCornerRadius="5dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/ivCagetory"
                android:src="@drawable/customer"
                android:scaleType="centerCrop"
                bind:imageUrl="@{cagetory.linkImage}"
                android:layout_width="70dp"
                android:layout_height="70dp"/>
        </androidx.cardview.widget.CardView>
        <TextView
            android:id="@+id/tvNameCagetory"
            android:text="@{cagetory.name}"
            android:layout_marginTop="10dp"
            android:textColor="@color/colorBlack"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cardview"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </androidx.constraintlayout.widget.ConstraintLayout>


</layout>